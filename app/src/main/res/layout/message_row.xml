<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.freedommuskrats.clubbub.MainActivity"
    android:background="@color/lighter_grey"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/messFrame"
        >

        <ImageView
            android:id="@+id/deleteMessageIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="5dp"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/dialog_holo_dark_frame" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/messFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messagePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            tools:text="Person Name" />


        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="message"
            android:layout_margin="20dp"/>



    </LinearLayout>



</RelativeLayout>